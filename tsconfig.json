{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist",
    "types": ["node", "express", "express-session", "cookie-parser"],
    "resolveJsonModule": true
  },
  "include": ["src", "src/types/**/*.d.ts"],
  "exclude": ["api"]
}
